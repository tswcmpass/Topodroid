<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<LinearLayout 
  style="@style/base_padding"
  android:layout_width="wrap_content" 
  android:layout_height="wrap_content"
  android:orientation="vertical"
  >
 					  

  <ImageView android:id="@+id/histogram0"
    android:layout_marginTop="@dimen/margintiny"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="@dimen/marginsmall"
    android:contentDescription="@string/error_distribution"
  />
  <TextView android:id="@+id/avestd0"
    android:layout_marginTop="@dimen/margintiny"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
  />

  <ImageView android:id="@+id/histogram1"
    android:layout_marginTop="@dimen/marginv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="@dimen/marginsmall"
    android:contentDescription="@string/error_distribution"
  />
  <TextView android:id="@+id/avestd1"
    android:layout_marginTop="@dimen/margintiny"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
  />

  <ImageView android:id="@+id/histogram2"
    android:layout_marginTop="@dimen/marginsmall"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="@dimen/marginsmall"
    android:contentDescription="@string/error_distribution"
  />
  <TextView 
    android:layout_marginTop="@dimen/marginsmall"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:text="@string/calib_precision"
  />
  <TextView android:id="@+id/error1"
    android:layout_marginTop="@dimen/marginsmall"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
  />
  <TextView android:id="@+id/error2"
    android:layout_marginTop="@dimen/marginsmall"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
  />
  <TextView android:id="@+id/error_max"
    android:layout_marginTop="@dimen/marginsmall"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
  />

  <LinearLayout android:id="@+id/help"
    android:layout_width="match_parent" 
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/marginvbig"
    android:layout_gravity="start"
    >
    <Button android:id="@+id/button_help"
      style="@style/button_empty"
      android:text="@string/button_help"
    />
    <LinearLayout
      android:layout_width="fill_parent" 
      android:layout_height="wrap_content"
      android:gravity="end"
      >
      <Button android:id="@+id/button_close"
            style="@style/button_default"
            android:text="@string/button_close"
      />
    </LinearLayout>
  </LinearLayout>

</LinearLayout>
</ScrollView>
